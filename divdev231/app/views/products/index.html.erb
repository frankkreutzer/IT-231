<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table border=1>
  <thead>
    <tr>
      <th>Productname</th>
	  <th>Homepage?</th>
      <th>Productimage</th>
      <th>Description</th>
      <th>Category</th>
      <th>Supplier</th>
      <th>Saleprice</th>
      <th>Status</th>
      <th>Purchaseprice</th>
      <th>Qtyonhand</th>
      <th>Reorderpoint</th>
      <th>Reorderqty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.productname %></td>
		<td><%= product.homepage %></td>
        <td><%= image_tag product.productimage, size: "70x70" %></td>
        <td><%= product.description %></td>
        <td><%= product.category_id %></td>
        <td><%= product.supplier_id %></td>
        <td><%= number_to_currency(product.saleprice) %></td>
        <td><%= product.status %></td>
        <td><%= number_to_currency(product.purchaseprice) %></td>
        <td><%= product.qtyonhand %></td>
        <td><%= product.reorderpoint %></td>
        <td><%= product.reorderqty %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

